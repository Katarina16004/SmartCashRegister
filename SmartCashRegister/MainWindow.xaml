<Window x:Class="SmartCashRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartCashRegister"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Height="auto" TextAlignment="Left" />
            <PasswordBox x:Name="PasswordBox" Width="200" Height="auto"  Margin="0,10,0,10"  />
            <Button Content="Prijavi se" Width="200" Height="30" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
